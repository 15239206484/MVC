<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="practice.code.com.baseframework.controller.MainActivity">

   <Button
       android:id="@+id/main_bt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="我按一下"
       />
   <Button
       android:id="@+id/login_bt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="登录"
       />

   <Button
       android:id="@+id/go_fragment"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="GoTOFragment"
       />

   <com.androidkun.PullToRefreshRecyclerView
       android:id="@+id/main_fresh_rv"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       />

</LinearLayout>
